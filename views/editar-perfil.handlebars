{{#if mensajes}}
    <div class="error alerta">{{mensajes}}</div>
{{/if }}
<main class="contenedor">
    <form action="/editar-perfil" method="POST" class="default-form" enctype="multipart/form-data" >
        <div class="campo">
            <label>Nombre</label>
            <input value="{{usuario.nombre}}" type="text" name="nombre" placeholder="Tu Nombre" required >
        </div>
        <div class="campo">
            <label>Email</label>
            <input value="{{usuario.email}}" type="text" name="email" placeholder="Tu Email" required>
        </div>
        <div class="campo">
            <label>Contraseña</label>
            <input type="password" name="password" placeholder="Tu Contraseña">
        </div>
        <div class="campo">
            <label>Imagen</label>
            <input type="file" name="imagen" placeholder="Tu imagen de perfil">
            <img src="uploads/perfiles/{{usuario.imagen}}" class="admin-perfil" alt="">
        </div>
        <div class="campo">
            <input type="submit" class="btn btn-azul" value="Guardar cambios">
        </div>
    </form>
</main>